{
  "name": "simplefact-sdk",
  "version": "1.0.0",
  "description": "SDK oficial de JavaScript/TypeScript para SimpleFact - Sistema de facturación electrónica",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "simplefact",
    "facturacion",
    "factura",
    "invoice",
    "billing",
    "accounting",
    "spain",
    "sdk",
    "typescript",
    "react",
    "hooks",
    "api"
  ],
  "author": {
    "name": "SimpleFact Team",
    "email": "support@simplefact.com",
    "url": "https://simplefact.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/simplefact/sdk.git"
  },
  "homepage": "https://simplefact.com",
  "bugs": {
    "url": "https://github.com/simplefact/sdk/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "jest": "^29.5.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
